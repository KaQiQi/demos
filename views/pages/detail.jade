extends ../layout

block content 
  .container
    .row
      .col-md-1
        embed(src="#{movies.flash}",allowFullScreen="true",quality="high",width="30%",height="600",align="middle",type="application/x-shockwave-flash")
      .col-md-1
        dl.dl-horizontal
          dt 电影的名字
          dd  #{movies.title}
          dt 导演
          dd #{movies.doctor}
          dt 国家
          dd #{movies.country}
          dt 语言
          dd #{movies.language}
          dt 上映日期
          dd #{movies.year}
          dt 简介
          dd #{movies.summary}
